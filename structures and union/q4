#include <stdio.h>
#include <string.h>

struct Cricketer {
    char name[50];
    int age;
    int matches;
    float avg;
};

void sortByAverage(struct Cricketer c[], int n) {
    struct Cricketer temp;
    for(int i = 0; i < n-1; i++)
        for(int j = 0; j < n-i-1; j++)
            if(c[j].avg > c[j+1].avg) {
                temp = c[j];
                c[j] = c[j+1];
                c[j+1] = temp;
            }
}

int main() {
    struct Cricketer c[10] = {
        {"Virat", 34, 100, 55.2},
        {"Rohit", 36, 120, 48.5},
        {"Dhoni", 42, 90, 50.1},
        // Add more records
    };
    sortByAverage(c, 3);
    for(int i = 0; i < 3; i++)
        printf("Name: %s Age: %d Matches: %d Avg: %.2f\n",
               c[i].name, c[i].age, c[i].matches, c[i].avg);
    return 0;
}
