#include <stdio.h>
#define SIZE 4

int main() {
    int mat[SIZE][SIZE], arr[SIZE*SIZE], k = 0;
    printf("Enter 4x4 matrix:\n");
    for(int i=0; i<SIZE; i++)
        for(int j=0; j<SIZE; j++)
            scanf("%d", &mat[i][j]);

    // Flatten matrix
    for(int i=0; i<SIZE; i++)
        for(int j=0; j<SIZE; j++)
            arr[k++] = mat[i][j];

    // Bubble sort
    for(int i=0; i<k-1; i++)
        for(int j=0; j<k-i-1; j++)
            if(arr[j] > arr[j+1]) {
                int temp = arr[j]; arr[j] = arr[j+1]; arr[j+1] = temp;
            }

    printf("Sorted 1D array:\n");
    for(int i=0; i<k; i++) printf("%d ", arr[i]);
    return 0;
}
