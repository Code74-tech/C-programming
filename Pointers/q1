#include <stdio.h>
#define SIZE 2

void input(int *mat) {
    for(int i=0; i<SIZE*SIZE; i++)
        scanf("%d", mat+i);
}

void print(int *mat) {
    for(int i=0; i<SIZE; i++) {
        for(int j=0; j<SIZE; j++)
            printf("%d ", *(mat + i*SIZE + j));
        printf("\n");
    }
}

int main() {
    int a[SIZE][SIZE], b[SIZE][SIZE], sum[SIZE][SIZE], diff[SIZE][SIZE], prod[SIZE][SIZE];
    printf("Enter matrix A:\n"); input((int*)a);
    printf("Enter matrix B:\n"); input((int*)b);

    for(int i=0; i<SIZE; i++)
        for(int j=0; j<SIZE; j++) {
            sum[i][j] = a[i][j] + b[i][j];
            diff[i][j] = a[i][j] - b[i][j];
            prod[i][j] = 0;
            for(int k=0; k<SIZE; k++)
                prod[i][j] += a[i][k] * b[k][j];
        }

    printf("Sum:\n"); print((int*)sum);
    printf("Difference:\n"); print((int*)diff);
    printf("Product:\n"); print((int*)prod);
    return 0;
}
